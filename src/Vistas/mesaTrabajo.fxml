<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXNodesList?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="root" prefHeight="450.0" prefWidth="720.0" styleClass="parent" stylesheets="@Styles.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.MesaTrabajoController">
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="66.0" prefWidth="600.0" spacing="50.0" BorderPane.alignment="CENTER_LEFT">
             <JFXButton fx:id="btnRegresar" focusTraversable="false" styleClass="jfx-button-normal" text="Regresar">
                 <font>
                     <Font size="16.0" />
                 </font>
             </JFXButton>
            <Label fx:id="lb" text="Label">
                <font>
                    <Font size="21.0" />
                </font>
            </Label>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="panelPila" BorderPane.alignment="CENTER">
            <BorderPane fx:id="panelAristas" layoutX="10.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0" />
            <BorderPane fx:id="panelVertices" prefHeight="200.0" prefWidth="200.0" />
        </StackPane>
    </center>
    <bottom>
        <BorderPane prefHeight="141.0" prefWidth="690.0">
            <right>
                <JFXNodesList fx:id="menuNodos" alignment="CENTER" rotate="180.0" spacing="10.0" BorderPane.alignment="CENTER">
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                    <JFXButton contentDisplay="GRAPHIC_ONLY" focusTraversable="false" minHeight="58.0" minWidth="58.0" styleClass="jfx-button-circular" text="Button">
                        <graphic>
                            <FontAwesomeIcon fill="WHITE" iconName="COG" size="32" text="" />
                        </graphic>
                    </JFXButton>
                    <HBox alignment="CENTER" spacing="10.0">
                        <padding>
                            <Insets right="100.0" />
                        </padding>
                        <Label alignment="CENTER" contentDisplay="RIGHT" minWidth="90.0" text="Modo arista">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <JFXButton fx:id="btnArista" contentDisplay="GRAPHIC_ONLY" minHeight="48.0" minWidth="48.0" styleClass="jfx-button-circular">
                            <graphic>
                                <FontAwesomeIcon fill="WHITE" iconName="LONG_ARROW_RIGHT" size="20" />
                            </graphic>
                        </JFXButton>
                    </HBox>
                    <HBox alignment="CENTER" spacing="10.0">
                        <padding>
                            <Insets right="100.0" />
                        </padding>
                        <Label alignment="CENTER" contentDisplay="RIGHT" minWidth="90.0" text="Modo vértice">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                        <JFXButton fx:id="btnVertice" contentDisplay="GRAPHIC_ONLY" minHeight="48.0" minWidth="48.0" styleClass="jfx-button-circular">
                            <graphic>
                                <FontAwesomeIcon fill="WHITE" iconName="CIRCLE" size="20" />
                            </graphic>
                        </JFXButton>
                    </HBox>
               <BorderPane.margin>
                  <Insets bottom="20.0" />
               </BorderPane.margin>
                </JFXNodesList>
            </right>
            <BorderPane.margin>
                <Insets right="30.0" />
            </BorderPane.margin>
         <center>
            <VBox maxWidth="500.0" BorderPane.alignment="BOTTOM_LEFT">
               <children>
                  <JFXButton alignment="CENTER_RIGHT" contentDisplay="RIGHT" onAction="#probar" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="jfx-button-desplegable" text="Salida algorítmica                                 ">
                     <graphic>
                        <FontAwesomeIcon fill="WHITE" iconName="ANGLE_DOUBLE_DOWN" size="25" />
                     </graphic>
                     <font>
                        <Font size="16.0" />
                     </font>
                  </JFXButton>
                  <JFXTextArea fx:id="txtArea" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" styleClass="jfx-area-texto" />
               </children>
            </VBox>
         </center>
        </BorderPane>
    </bottom>
</BorderPane>
